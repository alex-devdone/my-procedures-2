{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": ["dist/**", ".next/**"],
			"env": [
				"BETTER_AUTH_SECRET",
				"BETTER_AUTH_URL",
				"CORS_ORIGIN",
				"DATABASE_URL",
				"DIRECT_URL",
				"NEXT_PUBLIC_SUPABASE_URL",
				"NEXT_PUBLIC_SUPABASE_ANON_KEY"
			]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"db:push": {
			"cache": false
		},
		"db:studio": {
			"cache": false,
			"persistent": true
		},
		"db:migrate": {
			"cache": false
		},
		"db:generate": {
			"cache": false
		},
		"test": {
			"cache": false,
			"persistent": true
		},
		"test:run": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", "vitest.config.ts", "vitest.setup.ts"],
			"outputs": []
		},
		"test:coverage": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", "vitest.config.ts", "vitest.setup.ts"],
			"outputs": ["coverage/**"]
		}
	}
}
